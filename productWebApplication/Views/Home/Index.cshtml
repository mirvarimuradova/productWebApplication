@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>
@{
    // ViewData["Title"] = "ProductCard";
    Layout = "_Layout";
}
@section mycss {

    <style>
        body {
            font-family: Arial, sans-serif;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }

        .product-card {
            width: 300px;
            background: #fff;
            border-radius: 10px;
            margin: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: center;
            transition: transform 0.2s;
        }

            .product-card:hover {
                transform: scale(1.05);
            }

            .product-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

            .product-card h3 {
                margin: 15px 0 5px;
                font-size: 1.5em;
            }

            .product-card p {
                color: #666;
                font-size: 0.9em;
                margin: 0 15px 10px;
            }

            .product-card .price {
                color: #2ecc71;
                font-size: 1.2em;
                margin: 10px 0;
            }

            .product-card button {
                background: #3498db;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                margin-bottom: 15px;
            }

                .product-card button:hover {
                    background: #2980b9;
                }

        .text-center {
            display: flex;
            flex-wrap: wrap;
        }
    </style>
}




<h1 class="display-4">Welcome To Our Site</h1>
<div class="text-center">

    @foreach (Product product in Model)
    {
        @await Html.PartialAsync("Partials/ProductCard", product)
    }

       
  
</div>
